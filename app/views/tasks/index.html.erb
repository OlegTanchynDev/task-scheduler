<h2>
  Tasks:
  <% if user_signed_in? %>
    <%= link_to 'New Task', new_task_path %>
  <% end %>
</h2>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Due date</th>
    <th>Priority</th>
    <th>Status</th>
    <% if user_signed_in? %>
      <th>Actions</th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.due_date %></td>
      <td><%= task.priority %></td>
      <td><%= task.status %></td>
      <% if user_signed_in? %>
        <td>
          <%= link_to 'Delete', task, data: { turbo_method: :delete, confirm: 'Are you sure?' } %>
        </td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
